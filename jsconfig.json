{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "types": [],                // ⛔ disables auto-included @types
    "typeRoots": []             // ⛔ disables global type roots
  },
  "include": ["**/*.js"],
  "exclude": ["node_modules", "../node_modules", "../src"]
}
